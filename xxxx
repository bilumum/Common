    <script>
        $(function () {

            function attchHoverEvents() {
                $('.smart-rating-wrapper').find('.rate-line-circle').each(function (t, item) {

                    $(item).hover(function () {
                        var selectedValue = $(this).attr('data-rate-type');                       
                        var row = $(this).parents('.row').next();
                        var rateBox = row.find('.rate-box[data-rate-type=' + selectedValue + ']');
                        rateBox.css('display', 'flex');

                    }, function () {                      
                        var selectedValue = $(this).attr('data-rate-type');
                        var row = $(this).parents('.row').next();
                        var rateBox = row.find('.rate-box[data-rate-type=' + selectedValue + ']');
                        rateBox.css('display', 'none');
                    });


                    //var rateItems = $(this).find('.competency-rate-items');
                    //$.each(rateItems, function (i, item) {
                    //    $(item).find('.selectionIcon').each(function (j, subItem) {
                    //        $(subItem).hover(function () {
                    //            var selectedValue = $(this).attr('data-value');
                    //            selectRateItems(item, selectedValue, true);
                    //        }, function () {
                    //            var selectedValue = $(this).attr('data-value');
                    //            selectRateItems(item, selectedValue, false);
                    //        });

                    //        $(subItem).on('click', function () {
                    //            var selectedValue = $(this).attr('data-value');
                    //            clearSelectedRateItem(rateItems);
                    //            $(item).css('display', 'block');
                    //            setActiveSelectedRateItems(item, selectedValue);
                    //        });

                    //    });
                    //});
                });
            }

            function selectRateItems(container, selectedValue, addClass) {
                for (var i = 1; i <= 3; i++) {
                    var el = $(container).find('.selectionIcon[data-value=' + i + ']');
                    if (addClass) {
                        if (i <= selectedValue) {
                            el.addClass("hover")
                            el.removeClass("fake-non-selected");
                        }
                        else {
                            el.addClass("fake-non-selected");
                        }
                    }
                    else {
                        el.removeClass("hover");
                        el.removeClass("fake-non-selected");
                    }
                }
            }

            function clearSelectedRateItem(rateItems) {
                $.each(rateItems, function (i, item) {
                    $(item).css('display', '');
                    $(item).find('.selectionIcon').each(function (j, subItem) {
                        $(this).removeClass("selected");
                    });
                });
            }

            function setActiveSelectedRateItems(container, selectedValue) {
                for (var i = 1; i <= 3; i++) {
                    var el = $(container).find('.selectionIcon[data-value=' + i + ']');
                    if (i <= selectedValue) {
                        el.addClass("selected");
                    }
                    else {
                        el.removeClass("selected");
                    }
                }
            }

            attchHoverEvents();


            $(".competency-rate-items-container").flip({
                trigger: 'manual'
            });

            $(".rate-items-opener").click(function () {
                $(this).parents('.competency-rate-items-container').flip('toggle');
            });


        });
    </script>
